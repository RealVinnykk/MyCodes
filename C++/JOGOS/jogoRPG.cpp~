#include <algorithm>
#include <iomanip>
#include <cctype>
#include <iostream>
#include <string.h>
#include <random>
#include <list>
#include <vector>
#include <locale.h>

using namespace std;

string nomeJogador;

class Player
{
public:
	string NAME;
	int LVL = 0;
	int DFS = DFS * LVL;
	int ATK = ATK * LVL;
	int HP;

	Player(string nome)
	{
		NAME = nome;
	}
};

class Enemy
{
public:
	string NAME;
	int LVL;
	int DFS = DFS * LVL;
	int ATK = ATK * LVL;
	int HP = HP + DFS;

	Enemy(string nome, int nivel){
		NAME = nome;
		LVL = nivel;
	}
};

Enemy ORC = Enemy("ORC", 1);
Enemy GOBLIN = Enemy("Goblin", 1);
Enemy Assasin = Enemy("Assasin", 1);

int main()
{

	cout << "informe o nome do seu personagem: ";
	cin >> nomeJogador;

	Player Player1 = Player(nomeJogador);

	cout << "Bem vindo " << Player1.NAME << endl;

	cout << "O jogo está começando..." << endl;

	cout << "Jogo feito por VINNY" << endl;

	Player1.HP = 15;
	Player1.LVL = 1;
	Player1.DFS = 2;
	Player1.ATK = 4;

	cout << "seus stats são:" << endl;
	cout << "LVL = " << Player1.LVL << endl;
	cout << "HP = " << Player1.HP << endl;
	cout << "DFS = " << Player1.DFS << endl;
	cout << "ATK = " << Player1.ATK << endl;

	bool jogando = true;
	int inimigo = 1;
	while (jogando = true)
	{

		if (inimigo == 1)
		{
			ORC.LVL = 4;
			ORC.ATK = 3;
			ORC.DFS = 2;
			ORC.HP = 15;

			int oqueFazer;

			cout << "um " << ORC.NAME << " apareceu na sua frente, oque você ira fazer?" << endl;
			cout << "1. Ver Status" << endl;
			cin >> oqueFazer;

			if (oqueFazer == 1)
			{

				cout << "voce analisa o orc e esses são seus status: "
			}
		}
	}

	return 0;
}